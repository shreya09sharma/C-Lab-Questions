#include <stdio.h>

int main() {
    int n;
printf("enter the elements of an array");
scanf("%d", &n);
int arr[n];
int temp[n];
int index=0;
for(int i=0;i<n;i++)
{
    printf("elements %d",i+1);
    scanf("%d",&arr[i]);
    
}
printf("\n the elements of array are\n");
for(int i=0;i<n;i++)
{
    printf("%d\n",arr[i]);
}

for(int i=0;i<n;i++)
{
    if(arr[i]%2==0)
    {
        temp[index]=arr[i];
        index++;
    }
}
for(int i=0;i<n;i++)
{
    if(arr[i]%2!=0)
    {
        temp[index]=arr[i];
        index++;
    }
}
for(int i=0;i<n;i++)
{
    arr[i]=temp[i];
}
printf("the elements of array\n");
for(int i=0;i<n;i++)
{
    printf("%d\n", arr[i]);
}
    return 0;
}
