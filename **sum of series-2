#include <stdio.h>

int main() {
    int n;
    double sum = 0.0;

    printf("Enter the value of n: ");
    scanf("%d", &n);

    for (int i = 1; i <= n; i++) {
        if (i % 2 == 0)
            sum = sum - (1.0 / i);  
        else
            sum = sum + (1.0 / i);  
    }

    printf("Sum of the series = %f\n", sum);

    return 0;
}
